<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.fhcampuswien.simplechattool.ChatController">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Quit" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About SimpleChatTool" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" style="-fx-background-color: #ebe9f5;" VBox.vgrow="ALWAYS">
            <children>
                <TextField id="field_text" fx:id="field_text" alignment="TOP_LEFT" layoutX="12.0" layoutY="289.0" prefHeight="68.0" prefWidth="466.0" promptText="Enter your message">
               <font>
                  <Font name="System Italic" size="14.0" />
               </font></TextField>
                <Button id="btn_send" fx:id="btn_send" layoutX="488.0" layoutY="289.0" mnemonicParsing="false" onAction="#sendMessage" prefHeight="31.0" prefWidth="100.0" style="-fx-background-color: #7d43e2;" text="Send" textFill="WHITE">
               <font>
                  <Font size="15.0" />
               </font></Button>
            <TextFlow id="textflow" fx:id="textFlow" layoutX="12.0" layoutY="14.0" prefHeight="262.0" prefWidth="466.0" style="-fx-background-color: #ffffff; -fx-border-width: 1; -fx-border-color: #7d43e2; -fx-border-radius: 5;" AnchorPane.leftAnchor="12.0" />
            <Button id="btn_send" fx:id="btn_disconnect" layoutX="488.0" layoutY="325.0" mnemonicParsing="false" onAction="#disconnectChat" prefHeight="31.0" prefWidth="100.0" style="-fx-background-color: #7d43e2;" text="Disconnect" textFill="WHITE">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            </children>
        </AnchorPane>
    </children>
</VBox>
